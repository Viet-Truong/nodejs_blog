<div class="container">
    <div class="mt-4">
        <h2 class="text-primary">Sửa khoá học</h2>
        <form action="/courses/{{course._id}}?_method=PUT" class="form" method="POST">
            <div class="form-group">
                <div class="mb-3">
                    <label for="name" class="form-label">Tên khoá học</label>
                    <input type="text" class="form-control" value='{{course.name}}' id="name" placeholder="Tên khoá học" name="name"/>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3">
                    <label for="description" class="form-label">Mô tả</label>
                    <textarea class="form-control" id="description" rows="3" name="description">{{course.description}}</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3">
                    <label for="videoID" class="form-label">Video ID</label>
                    <input type='text' class="form-control" value='{{course.videoID}}' id="videoID" placeholder="Video ID" name="videoID" />
                </div>
            </div>
            {{!-- <div class="form-group">
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type='file' class="form-control" value='{{course.image}}' id="image" placeholder="Image" name="image" />
                </div>
            </div> --}}
            <button type='submit' class="btn btn-primary">Sửa khoá học</button>
        </form>
    </div>
</div>